# Regisbridge School Website - Environment Variables (Next.js)
# Copy this file to .env.local for development or set these in Vercel for production

# Database (PostgreSQL via Prisma)
DATABASE_URL="postgresql://user:password@localhost:5432/regisbridge"

# JWT Authentication (generate secure keys with: openssl rand -base64 64)
JWT_SECRET="your-64-character-secret-key-here-minimum"
JWT_REFRESH_SECRET="your-64-character-refresh-secret-key-here-minimum"

# Email Service (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@regisbridge.page"

# Feature Flags (Statsig)
STATSIG_SDK_KEY="your-statsig-sdk-key"

# Environment
NODE_ENV="development"

# Security
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Optional: Production URLs
# NEXT_PUBLIC_APP_URL="https://regisbridge.page"
# NEXT_PUBLIC_API_URL="https://regisbridge.page/api"

# Optional: Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Optional: File Upload (Cloudinary/AWS S3)
# CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
# CLOUDINARY_API_KEY="your-cloudinary-api-key"
# CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Optional: SMS Service (Twilio)
# TWILIO_ACCOUNT_SID="your-twilio-account-sid"
# TWILIO_AUTH_TOKEN="your-twilio-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000"

# Note: Never commit .env or .env.local files to version control!
# These files are already in .gitignore
# Use strong, unique secrets in production!
