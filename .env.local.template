# Environment Variables Template

# ======================
# REQUIRED VARIABLES
# ======================

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000  # Change to your production URL

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/regisbridge

# Authentication
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# ======================
# OPTIONAL VARIABLES
# ======================

# Email Service (SendGrid)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@regisbridge.page

# Analytics
NEXT_PUBLIC_GA_ID=

# Feature Flags
NEXT_PUBLIC_ENABLE_FEATURE_FLAGS=false

# Vercel (automatically set in production)
# VERCEL_URL=
# VERCEL_ENV=

# ======================
# DEVELOPMENT ONLY
# ======================

# Skip environment validation in development
SKIP_ENV_VALIDATION=true
