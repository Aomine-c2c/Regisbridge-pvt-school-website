generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  firstName   String
  lastName    String
  role        String
  grade       String?  
  studentId   String?  
  phoneNumber String?  
  status      String   @default("active")
  permissions Json?    
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
