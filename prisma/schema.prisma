generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  firstName   String
  lastName    String
  role        UserRole
  grade       String?  
  studentId   String?  @unique
  phoneNumber String?  
  status      UserStatus @default(ACTIVE)
  permissions Json?    
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastLoginAt DateTime?
  
  // Relations
  student     Student?
  teacherSubjects Subject[] @relation("TeacherSubjects")
  
  @@index([email])
  @@index([role])
  @@index([status])
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING
}

model Student {
  id              String   @id @default(cuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  enrollmentDate  DateTime @default(now())
  currentGrade    String
  section         String?
  rollNumber      String   @unique
  parentName      String?
  parentEmail     String?
  parentPhone     String?
  address         String?
  dateOfBirth     DateTime?
  bloodGroup      String?
  medicalNotes    String?
  
  // Relations
  grades          Grade[]
  attendance      Attendance[]
  assignments     AssignmentSubmission[]
  feePayments     FeePayment[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([currentGrade])
  @@index([rollNumber])
}

model Subject {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  grade       String
  description String?
  teacherId   String?
  teacher     User?    @relation("TeacherSubjects", fields: [teacherId], references: [id], onDelete: SetNull)
  
  // Relations
  grades      Grade[]
  assignments Assignment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([grade])
  @@index([teacherId])
}

model Grade {
  id          String   @id @default(cuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  subjectId   String
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  term        String
  academicYear String
  score       Float
  maxScore    Float
  percentage  Float
  letterGrade String
  remarks     String?
  gradedBy    String
  gradedAt    DateTime @default(now())
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([studentId, subjectId, term, academicYear])
  @@index([studentId, term])
  @@index([subjectId])
  @@index([academicYear])
}

model Attendance {
  id        String   @id @default(cuid())
  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  date      DateTime @db.Date
  status    AttendanceStatus // PRESENT, ABSENT, LATE, EXCUSED
  notes     String?
  markedBy  String
  markedAt  DateTime @default(now())
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([studentId, date])
  @@index([date])
  @@index([studentId, date])
  @@index([status])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
}

model Assignment {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  subjectId   String
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  grade       String
  dueDate     DateTime
  totalPoints Int
  assignmentType AssignmentType // HOMEWORK, QUIZ, PROJECT, EXAM
  status      AssignmentStatus @default(ACTIVE) // ACTIVE, ARCHIVED
  createdBy   String
  
  // Relations
  submissions AssignmentSubmission[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([subjectId])
  @@index([grade])
  @@index([dueDate])
  @@index([status])
  @@index([assignmentType])
}

enum AssignmentType {
  HOMEWORK
  QUIZ
  PROJECT
  EXAM
}

enum AssignmentStatus {
  ACTIVE
  ARCHIVED
}

model AssignmentSubmission {
  id           String   @id @default(cuid())
  assignmentId String
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  studentId    String
  student      Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  submittedAt  DateTime @default(now())
  fileUrl      String?
  fileName     String?
  fileSize     Int?
  content      String?  @db.Text
  score        Float?
  feedback     String?  @db.Text
  gradedAt     DateTime?
  gradedBy     String?
  status       SubmissionStatus @default(SUBMITTED) // SUBMITTED, GRADED, LATE, MISSING
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([assignmentId, studentId])
  @@index([studentId])
  @@index([assignmentId])
  @@index([status])
}

enum SubmissionStatus {
  SUBMITTED
  GRADED
  LATE
  MISSING
}

model FeePayment {
  id            String   @id @default(cuid())
  studentId     String
  student       Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  amount        Float
  feeType       FeeType  // TUITION, BOARDING, EXAM, TRANSPORT, OTHER
  term          String
  academicYear  String
  status        PaymentStatus // PAID, PENDING, OVERDUE, PARTIAL
  paymentDate   DateTime?
  paymentMethod PaymentMethod? // CASH, BANK_TRANSFER, MOBILE_MONEY, CARD
  receiptNumber String?  @unique
  transactionId String?
  dueDate       DateTime
  paidAmount    Float    @default(0)
  balance       Float
  notes         String?  @db.Text
  recordedBy    String
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([studentId])
  @@index([status])
  @@index([dueDate])
  @@index([academicYear, term])
  @@index([receiptNumber])
  @@index([feeType])
}

enum FeeType {
  TUITION
  BOARDING
  EXAM
  TRANSPORT
  OTHER
}

enum PaymentStatus {
  PAID
  PENDING
  OVERDUE
  PARTIAL
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  MOBILE_MONEY
  CARD
}

model FinancialReport {
  id            String   @id @default(cuid())
  reportType    ReportType // INCOME_EXPENDITURE, BALANCE_SHEET, CASH_FLOW, BUDGET
  title         String
  periodStart   DateTime @db.Date
  periodEnd     DateTime @db.Date
  periodLabel   String
  
  // Balances stored as JSON
  openingBalance Json    // Currency[]
  closingBalance Json    // Currency[]
  
  // Categories stored as JSON
  income        Json     // IncomeCategory[]
  expenses      Json     // ExpenseCategory[]
  
  // Totals stored as JSON
  totalIncome   Json     // Currency[]
  totalExpenses Json     // Currency[]
  netPosition   Json     // Currency[]
  
  // Approval tracking
  status        ReportStatus @default(DRAFT) // DRAFT, PENDING_APPROVAL, APPROVED, ARCHIVED
  approvalData  Json?    // Approval signatures and dates
  
  // Metadata
  documentUrl   String?
  notes         String?  @db.Text
  createdBy     String
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([reportType])
  @@index([periodStart, periodEnd])
  @@index([status])
  @@index([createdBy])
}

enum ReportType {
  INCOME_EXPENDITURE
  BALANCE_SHEET
  CASH_FLOW
  BUDGET
}

enum ReportStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  ARCHIVED
}

